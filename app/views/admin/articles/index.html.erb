<h2 class="head-line title_h2 text-center admin_item_index">記事一覧</h2>
<div class='container'>
<div class="row">
  <div class="col-xs-10 col-xs-offset-1">
  <% if admin_signed_in? %>
    <%= link_to new_admin_article_path, class: "btn btn-secondary pull-right new_item" do %>
    <i class="fas fa-plus"></i>
    新規記事投稿
    <% end %>
  <% end %>
    <table class="table table-hover table-bordered table-condensed">
      <thead>
        <tr class="info">
          <th>画像</th>
          <th>タイトル</th>
        </tr>
      </thead>
      <tbody>
          <% @articles.each do |article| %>
          <tr>
            <td class="info col-xs-1">
                <%= attachment_image_tag article, :image, size: "300x220", fallback: "no_image.jpg" %>
            </td>
            <td class"text-left">
                <%= link_to admin_article_path(article), class: "btn-link" do %>
                <%= article.title %>
                <% end %>
            </td>
          </tr>
          <% end %>
      </tbody>
    </table>
  </div>
　　<div class="text-center"><%= paginate(@articles) %></div>
</div>
</div>