<!DOCTYPE html>
<html>
  <head>
    <title>PFEc2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
   <% if admin_signed_in? %>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
       <div class="container">
         <%= link_to root_path do %>
            <div class="ichigo"><%= image_tag ('logo2.png') %></div>
          <% end %>
         <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
         </button>
         <div class="collapse navbar-collapse" id="navbarNavDropdown">
           <ul class="navbar-nav ml-auto">
            <li>
              <%= link_to "投稿一覧",admin_articles_path,class:"nav-link text-light far fa-newspaper" %>
            </li>
            <li>
              <%= link_to "品種一覧",admin_breeds_path,class:"nav-link text-light fas fa-feather-alt" %>
            </li>
            <li>
              <%= link_to "予約一覧",events_path,class:"nav-link text-light far fa-calendar-alt" %>
            </li>
            <li>
              <%= link_to "ジャンル一覧",admin_genres_path,class:"nav-link text-light fas fa-holly-berry" %>
            </li>
            <li>
              <%= link_to "ログアウト", destroy_admin_session_path, method: :delete,class:"nav-link text-light fas fa-sign-out-alt" %>
            </li>
           </ul>
         </div>
       </div>
      </nav>
    </header>
  <% else %>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">

          <%= link_to root_path do %>
            <%= image_tag('logo2.png') %>
          <% end %>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
              <li>
                <%= link_to "最近の出来事",admin_articles_path,class:"nav-link text-light far fa-newspaper" %>
              </li>
              <li>
                <%= link_to "栽培品種",admin_breeds_path,class:"nav-link text-light fas fa-feather-alt" %>
              </li>
              <li>
                <%= link_to "ご予約",events_path,class:"nav-link text-light far fa-calendar-alt" %>
              </li>
              <li>
                <%= link_to "お問い合わせ",contacts_path,class:"nav-link text-light fas fa-file-signature" %>
              </li>
              <li>
                <%= link_to "アクセス",maps_path,class:"nav-link text-light fas fa-road" %>
              </li>
            </ul>
         </div>
        </div>
      </nav>
    </header>
  <% end %>
  <body>

    <%= flash[:alert] %>
    <%= flash[:notice] %>
    <%= yield %>
  </body>
</html>
