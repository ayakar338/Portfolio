
  <div class="page-header">
    <h1>お問い合わせ</h1>
  </div>
<!--エラーメッセージ　始まり-->
  <% if @contact.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <strong>入力内容にエラーがあります</strong>
      <ul>
        <% @contact.errors.full_messages.each do |message| %>
         <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<!--エラーメッセージ　終わり-->

<!--お問い合わせ入力フォーム　始まり-->
<%= form_for @contact, :url => contacts_confirm_path do |f| %>
  <table class="table">
    <tr>
      <th>名前<span class="text-danger">（必須）</span></th>
      <td><%= f.text_field :name,  class: "form-control"%></td>
    </tr>
    <tr>
      <th>メールアドレス<span class="text-danger">（必須）</span></th>
      <td><%= f.text_field :email, class: "form-control" %></td>
    </tr>
    <tr>
      <th>お問い合わせ内容</th>
      <td><%= f.text_area :message, class: "form-control" %></td>
    </tr>
  </table>
  <%= f.submit '確認', class: 'btn btn-primary' %>
<% end %>
<!--お問い合わせ入力フォーム　終わり-->